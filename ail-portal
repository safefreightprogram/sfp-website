    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-app.js";
    import { getAuth, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.12.0/firebase-auth.js";

    const firebaseConfig = {
      apiKey: "AIzaSyBURlJUicOTobRLghN2RyEZfXEZvU_uiYU",
      authDomain: "safe-freight-program.firebaseapp.com",
      projectId: "safe-freight-program",
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);

    const ailMapping = {
      "safefreightprogram@gmail.com": { ail: "SFP Head Office", name: "Darren Jenkins" },
      "safrightprogram@gmail.com": { ail: "SFP Alternative Office", name: "Alternative Inspector" }
    };

    onAuthStateChanged(auth, (user) => {
      if (!user) return window.location.href = "ail-login.html";
      const mapping = ailMapping[user.email.toLowerCase()];
      if (!mapping) return window.location.href = "lookup-driver.html";
      document.getElementById("inspectorName").textContent = mapping.name;
      document.getElementById("ailName").textContent = mapping.ail;
      document.getElementById("dashboard").classList.remove("hidden");
    });

    window.signOutUser = () => {
      signOut(auth).then(() => window.location.href = "ail-login.html");
    };
  </script>
