  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 py-12 relative -mt-8 z-20" x-data="{ 
    activeTab: 'map',
    selectedState: 'all', 
    searchText: '',
    filteredLocations: [],
    nearbyMode: false,
    userLocation: null,
    
    init() {
      this.filteredLocations = ailData;
      this.getUserLocation();
    },
    
    async getUserLocation() {
      if (navigator.geolocation) {
        try {
          const position = await new Promise((resolve, reject) => {
            navigator.geolocation.getCurrentPosition(resolve, reject);
          });
          this.userLocation = {
            lat: position.coords.latitude,
            lng: position.coords.longitude
          };
        } catch (error) {
          console.log('Location access denied');
        }
      }
    },
    
    filterLocations() {
      this.filteredLocations = ailData.filter(location => {
        const matchesSearch = !this.searchText || location.company.toLowerCase().includes(this.searchText.toLowerCase());
        const matchesState = this.selectedState === 'all' || location.state === this.selectedState;
        return matchesSearch && matchesState;
      });
      
      if (this.nearbyMode && this.userLocation) {
        this.filteredLocations.sort((a, b) => {
          const distA = this.calculateDistance(this.userLocation.lat, this.userLocation.lng, a.lat, a.lng);
          const distB = this.calculateDistance(this.userLocation.lat, this.userLocation.lng, b.lat, b.lng);
          return distA - distB;
        });
      }
      
      if (this.activeTab === 'map') {
        filterMapMarkers();
      }
    },
    
    calculateDistance(lat1, lng1, lat2, lng2) {
      const R = 6371;
      const dLat = (lat2 - lat1) * Math.PI / 180;
      const dLng = (lng2 - lng1) * Math.PI / 180;
      const a = Math.sin(dLat/2) * Math.sin(dLat/2) + Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) * Math.sin(dLng/2) * Math.sin(dLng/2);
      const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
      return R * c;
    },
    
    toggleNearbyMode() {
      this.nearbyMode = !this.nearbyMode;
      this.filterLocations();
    }
  }">

    <!-- Advanced Search Panel -->
    <div class="filter-container rounded-3xl shadow-2xl p-8 mb-8 animate-slide-in">
