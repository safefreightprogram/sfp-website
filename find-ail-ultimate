          </select>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="mt-6 flex flex-wrap gap-3">
        <button @click="searchText = ''; selectedState = 'all'; nearbyMode = false; filterLocations()" 
                class="ripple px-6 py-3 bg-gradient-to-r from-gray-500 to-gray-600 text-white rounded-full font-medium transition-all duration-300 hover:scale-105 shadow-lg">
          Clear All Filters
        </button>
        <div class="text-sm text-gray-600 px-4 py-3 bg-white/60 rounded-full flex items-center space-x-2">
          <svg class="w-4 h-4 text-green-600"><use href="#icon-star" /></svg>
          <span><strong x-text="filteredLocations.length"></strong> locations found</span>
        </div>
      </div>
    </div>

    <!-- Tab Navigation -->
    <div class="flex justify-center mb-8">
      <div class="glass rounded-2xl p-2 shadow-2xl">
        <div class="flex space-x-2">
          <button 
            @click="activeTab = 'map'; if(window.google && window.map) { setTimeout(() => { google.maps.event.trigger(map, 'resize'); map.setCenter({ lat: -25.2744, lng: 133.7751 }); }, 100); }"
            :class="activeTab === 'map' ? 'active text-white' : 'text-gray-700'"
            class="tab-button px-8 py-4 font-semibold rounded-xl transition-all duration-300 flex items-center space-x-3 text-lg"
          >
            <svg class="w-6 h-6"><use href="#icon-map-pin" /></svg>
            <span>Interactive Map</span>
          </button>
          <button 
            @click="activeTab = 'list'"
            :class="activeTab === 'list' ? 'active text-white' : 'text-gray-700'"
            class="tab-button px-8 py-4 font-semibold rounded-xl transition-all duration-300 flex items-center space-x-3 text-lg"
          >
            <svg class="w-6 h-6"><use href="#icon-grid" /></svg>
            <span>Detailed List</span>
          </button>
        </div>
      </div>
    </div>

    <!-- Tab Content -->
    <div class="glass rounded-3xl shadow-2xl overflow-hidden">
      
      <!-- Map View -->
      <div x-show="activeTab === 'map'" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 transform scale-95" x-transition:enter-end="opacity-100 transform scale-100">
        <div id="map"></div>
      </div>

      <!-- List View -->
      <div x-show="activeTab === 'list'" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 transform scale-95" x-transition:enter-end="opacity-100 transform scale-100" class="p-8">
        <div class="custom-scroll overflow-y-auto max-h-[70vh]">
          <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            <template x-for="(location, index) in filteredLocations" :key="location.id">
              <div class="location-card rounded-2xl p-6 relative"
                   :style="`animation-delay: ${index * 0.1}s`"
                   style="animation: fadeInUp 0.6s ease-out both;">
                
                <!-- State Badge -->
                <div class="absolute top-4 right-4">
                  <span class="px-3 py-1 bg-gradient-to-r from-blue-500 to-blue-600 text-white text-xs font-bold rounded-full shadow-lg" x-text="location.state"></span>
                </div>
                
                <!-- Company Info -->
                <div class="mb-4">
                  <h3 class="font-bold text-lg text-gray-800 mb-2 pr-12 leading-tight" x-text="location.company"></h3>
                  <div class="flex items-start space-x-2 text-gray-600">
                    <svg class="w-4 h-4 mt-1 flex-shrink-0 text-blue-500"><use href="#icon-map-pin" /></svg>
                    <span class="text-sm leading-relaxed" x-text="location.address"></span>
                  </div>
                </div>
                
                <!-- Contact & Actions -->
